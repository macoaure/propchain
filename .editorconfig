# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript/JavaScript/React/JSON files
[*.{ts,tsx,js,jsx,json}]
quote_type = single

# CSS files
[*.css]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Configuration files
[{package.json,tsconfig*.json,tailwind.config.js,postcss.config.js,vite.config.ts,eslint.config.js}]
indent_size = 2
